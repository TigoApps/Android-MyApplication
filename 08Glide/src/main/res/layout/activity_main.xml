<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xcode126.glideuse.activity.MainActivity">

    <Button
        android:id="@+id/bt_glide_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bt_glide_base_click"
        android:text="基本方法的使用" />

    <Button
        android:id="@+id/bt_glide_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bt_glide_recyclerview_click"
        android:text="RecyclerView中加载图片" />

    <Button
        android:id="@+id/bt_glide_tranfromations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bt_glide_tranfromations_click"
        android:text="图片变换" />
</LinearLayout>
